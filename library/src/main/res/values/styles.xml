<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityFadeAnimation" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/FadeActivityAnimation</item>
    </style>
    <style name="FadeActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ButtonSelected" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ButtonUnselected" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">#FFF</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="HintBase">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HintSelected" parent="HintBase">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="HintUnselected" parent="HintBase">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
